#include <SPI.h>
#include <nRF24L01.h>
#include <RF24.h>
#include "printf.h"

/* start customization */
RF24 radio(9, 10); //channel for Arduino Micro, for Arduino Uno you must change the channel in 7,8!!
/* end configuration */


struct dataStruct {
  String nameSensor;
  int data;
} transmitter_motion;

unsigned char ADDRESS0[5]  =
{
  0xb2, 0x43, 0x88, 0x99, 0x45
};

int motion_pin = 2;

int tempMotion = -1;

void setup() {
  radio.begin();
  Serial.begin(115200);
  while (!Serial);
  pinMode(motion_pin, INPUT);
  printf_begin();
  radio.setRetries(15, 15);
  radio.enableDynamicPayloads();
  radio.setPALevel(RF24_PA_LOW);
  radio.openWritingPipe(ADDRESS0);
//  radio.openReadingPipe(0, ADDRESS0);
  radio.stopListening();
  radio.printDetails();

}


void loop() {
  transmitter_motion.nameSensor = "motion";
  transmitter_motion.data = digitalRead(motion_pin);
  bool ok;

  if (tempMotion != transmitter_motion.data) {
    Serial.println("motion Val:");
    Serial.println(transmitter_motion.data);

    ok = radio.write(&transmitter_motion, sizeof(transmitter_motion));

    tempMotion = transmitter_motion.data;

    if (ok) {
      Serial.println("Pipe 2");
      Serial.println("motion Val:");
      Serial.println(transmitter_motion.data);
    } else {
      Serial.println("it failed to send");
    }
  }

  delay(1000);
}
