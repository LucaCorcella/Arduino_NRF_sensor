#include <nRF24L01.h>
#include <SPI.h>
#include <RF24.h>


/* start customization */
RF24 radio(7, 8); //channel for Arduino Micro, for Arduino Uno you must change the channel in 7,8!!
/* end configuration */
const byte address[6] = "20000";

int data;
bool ok;

int motion_pin = 2;


void setup() {
  Serial.begin(9600);
  Serial.println("Motion test!");
  
  pinMode(motion_pin, INPUT);
  
  radio.begin();
  radio.setPALevel(RF24_PA_LOW);
  radio.openWritingPipe(address);
  radio.printDetails();
  radio.stopListening();
       
}

void loop() {
    data = digitalRead(motion_pin);
    
    Serial.println("motion Val:");
    Serial.println(data);

    ok = radio.write(&data, sizeof(data));

    if (ok) {
      Serial.println("Pipe 2");
      Serial.println("motion Val:");
      Serial.println(data);
    } else {
      Serial.println("it failed to send");
    }
  

  delay(5000);
}
